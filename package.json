{
  "name": "nodejs-project-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Node.js project",
  "main": "index.js",
  "repository": "https://github.com/freezzzy/nodejs-project-boilerplate",
  "author": "freezzzy <roman.yakovetz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "rimraf ./dist && babel -d ./dist ./src && yarn start copy-public && node ./dist/main.js",
    "dev": "node dev.js",
    "copy-public": "cp -r ./src/public ./dist/",
    "lint:js": "eslint ./src",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "babel-register": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-config-prettier": "^2.0.0",
    "eslint-plugin-import": "^2.2.0",
    "lint-staged": "^3.4.1",
    "pre-commit": "^1.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "node": true
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "pre-commit": "lint-staged",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "rimraf": "^2.6.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
